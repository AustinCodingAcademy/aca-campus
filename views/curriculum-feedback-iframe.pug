doctype html
html(lang='us-en')
  head
    title Campus Manager: Curriculum Feedback
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1')
    if env == 'production'
      link(rel='stylesheet', href='{{cache-break:css/app.css}}')
    else
      link(rel='stylesheet', href='/css/app.css')
  body
    .container
      form(action=form_url, method='POST', target='_self', onsubmit='')
        h4 Have some feedback on the curriculum? Spotted a typo? Let us know!
        .row
          .form-group.col-xs-12
            label(for='name') Name
            input#name.form-control(type='text', name='entry_1635986456', value=user.name, dir='auto', aria-label='Name', title='name', placeholder='Name', required)
          .form-group.col-xs-12
            label(for='email') Email
            input#emal.form-control(type='email', name='entry.1147586333', value=user.username, dir='auto', aria-label='Email', title='email', placeholder='Email', required)
          .form-group.col-xs-12
            label(for='phone') Phone
            input#phone.form-control(type='text', name='entry.677431156', value=user.phone, dir='auto', aria-label='Phone', title='phone', placeholder='Phone')
          .form-group.col-xs-12
            label(for='course') Textbook / Class
            input#course.form-control(type='text', name='entry.2100705449', value='', dir='auto', aria-label='Textbook / Class', title='course details', placeholder='Textbook / Class', required)
          .form-group.col-xs-12
            label(for='feedback') Feedback
            textarea#feedback.form-control(name='entry.1349808760', rows='8', dir='auto', aria-label='Feedback', placeholder='Feedback')
            input(type='hidden', name='draftResponse', value='[,,"5995000998175107185"]')
            input(type='hidden', name='pageHistory', value='0')
            input(type='hidden', name='fbzx', value='5995000998175107185')
            br
            button.btn.btn-primary.btn-block(type='submit') Submit
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/10.0.2/js/intlTelInput.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/javascript-detect-element-resize/0.5.3/jquery.resize.min.js')
    script(type='text/javascript').
      var $phone = $("#phone")
      $phone.intlTelInput({
        onlyCountries: ['us'],
        utilsScript: 'https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/9.0.6/js/utils.js'
      });
      $phone.on('change', function() {
        $phone.intlTelInput('setNumber', $phone.val());
      });
      parent.postMessage('resized-' + $('.container').height(), '*');
      $('.container').resize(function() {
        parent.postMessage('resized-' + $(this).height(), '*');
      });
      $('form').submit(function() {
        parent.postMessage('feedback-iframe', '*');
      });

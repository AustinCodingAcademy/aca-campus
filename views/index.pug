doctype html
html(lang='us-en')
  head
    title Campus Manager: Course Management Tool for ACA
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='mobile-web-app-capable' content='yes')
    meta(name='csrf-token', content=csrfToken)
    if env == 'production'
      if campusKey == 'sanantonio'
        include favicon-sanantonio
      else if campusKey == 'dallas'
        include favicon-dallas
      else if campusKey == 'houstontx'
        include favicon-houston
      else
        include favicon-austin
      link(rel='stylesheet', href='{{cache-break:css/app.css}}')
    else
      link(rel='stylesheet', href='css/app.css')
  body
    div#dataBootstrap(data-bootstrap=user)
    .container-fluid#container
    script(type='text/javascript', src='https://apis.google.com/js/client.js')
    if env == 'production'
      script(type='text/javascript', src='{{cache-break:js/bundle.js}}')
    else
      script(type='text/javascript', src='js/bundle.js')
